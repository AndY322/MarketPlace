@model IEnumerable<MarketPlace.Models.Employee>

@{
    ViewBag.Title = "ShowDetails";
}

<h2>@ViewBag.tradePlace.Name</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Post)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Post)
        </td>
        @if (User.IsInRole("Admin"))
        {
        <td>
            @Html.ActionLink("Edit employee", "EditEmployee", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DeleteEmployee", new { id = item.Id })
        </td>
        }
    </tr>
    }
</table>
<h3>
    Description
</h3>
<textarea class = "input-description" readonly>@ViewBag.tradePlace.Description</textarea>

<p>@Html.ActionLink("Back", "Index") </p>
