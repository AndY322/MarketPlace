@model MarketPlace.Models.TradePlace

@{
    ViewBag.Title = "EditPlace";
}

<h2>Edit Place #@Model.Id</h2>
@using (Html.BeginForm("EditPlace", "Home", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Name, "Shop Title")
            <br />
            @Html.EditorFor(m => m.Name)
        </p>
        <p>
            @Html.LabelFor(m => m.Size, "Size")
            <br />
            @Html.EditorFor(m => m.Size)

        </p>
        <p>
            @Html.LabelFor(m => m.Address, "Address")
            <br />
            @Html.EditorFor(m => m.Address)
        </p>
        <p><input type="submit" value="Отправить" /></p>
    </fieldset>
}

