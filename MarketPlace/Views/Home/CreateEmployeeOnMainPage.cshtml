@model MarketPlace.Models.Employee

@{
    ViewBag.Title = "CreateEmployeeOnMainPage";
}

<h2>Add employee</h2>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name, "Employee name")
    <br />
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    <br /><br />
    @Html.LabelFor(model => model.Surname, "Surname")
    <br />
    @Html.EditorFor(model => model.Surname)
    @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
    <br /><br />
    @Html.LabelFor(model => model.Post, "Post")
    <br />
    @Html.EditorFor(model => model.Post)
    <br /><br />
    @Html.LabelFor(model => model.Post, "Trade Place")
    <br />
    @Html.DropDownListFor(model => model.TradePlaceId, ViewBag.tradePlace as SelectList)
    <br /><br />
    <input type="submit" value="Добавить" />
}